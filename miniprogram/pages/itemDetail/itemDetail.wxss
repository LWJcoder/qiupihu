/* pages/itemDetail/itemDetail.wxss */

@import '../index/index.wxss';
.content{
  align-items: flex-start;
}
.noComment{
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #ccc;
}

.comItem, .comments, .com{
  width: 100%;
}
.userImg{
  margin-right: 10rpx;
}

.comItem{
  padding:10rpx 20rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f7f7f7;
}
.navBtn{
  width: 80%;
  height: 80rpx;
  color: #fff;
  background: #ea9518;
  line-height: 80rpx;
  margin-top: 60rpx;
}

.comItem:last-child{
  border: none
}
.time{
  width: 100%;
  font-size: 24rpx;
  color: #ccc;
  margin-right: 50rpx;
}

.bottomInput{
  width: 100%;
  height: 100rpx;
}


.inputB{
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #f4f4f4;
  border-radius: 10rpx;
  background: #f9f9f9;
}
